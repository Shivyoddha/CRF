<div class="container-slot-booker-new">

<%# the content section is coded here %>
    <div id="slots">


        <div id="slot-details">
        <div>
            <table class="table table-hover font-quicksand">
                <thead>
                    <tr class="table-head font-unbounded">
                        <th scope="col" id="application-no">Appl No</th>
                        <th scope="col" id="name">Name</th>
                        <th scope="col" id="institute">Institute</th>
                        <th scope="col" id="department">Department</th>
                        <th scope="col" id="contact-no">Contact No:</th>
                        <th scope="col" id="sample-no">Weight</th>
                        <th scope="col" id="composition">Days</th>
                        <th scope="col" id="composition">Toxicity</th>
                        <th scope="col" id="phase">Carcinogenic</th>
                        <th scope="col" id="range">Incompatible</th>
                        <th scope="col" id="request">More info</th>
                        <th scope="col" id="booked-on">Booked On</th>
                        <th scope="col" id="slot-date">Slot Date</th>
                        <th scope="col" id="slot-time">Slot Time</th>
                        <th scope="col">Status</th>
                        <th scope="col" id="reference-paper">Reference Paper</th>
                        <th scope="col" id="reference-paper">Reassign</th>
                        <th scope="col" id="reference-paper">Cancel</th>
                        <th scope="col" id="complete-col">Complete</th>

                    </tr>
                </thead>
                <tbody>

                        <% @glove2.where(status:'alloted').each do |glove|%>
                      <tr>
                        <!-- Button trigger modal -->
                        <th scope="row">CRF/glove/<%=glove.id %>	</th>
                        <td> <%= glove.user.firstname%><nobr> <%= glove.user.lastname%></td>
                        <td> <%= glove.user.orgname%> </td>
                        <td> <%= glove.user.department%> </td>
                        <td> <%= glove.user.contact%> </td>
                        <td> <%= glove.weight%> </td>
                        <td> <%= glove.days%> </td>
                        <td> <%= glove.toxicity%> </td>
                        <td> <%= glove.carcinogenic%> </td>
                        <td> <%= glove.incompatible%> </td>
                        <td> <%= glove.more%> </td>
                        <td>Booked</td>

                        <td> <%= glove.slotdate %></td>

                        <td> <%= glove.slottime %></td>

                          <td><%= glove.status%></td>
                          <%if glove.references.attached? %>
                    <%glove.references.each do |file|%>
                    <td> <%= link_to "Download", rails_blob_path(file, disposition: :attachment), class: "btn btn-primary" %></td>
                       <% end %>
                  <% else %>
                    <td>NA</td>
                  <% end %>
                  <td id="assign-btn">
                      <!-- Button trigger modal -->
                       <%= button_tag "Reassign", type: "button", class: "btn btn-primary", data: { bs_toggle: "modal", bs_target:"##{glove.id}" }, id: "ani" %>
                       <div id="<%= glove.id%>" class="modal">

                     <div class="modal-dialog">
                         <div class="modal-content">
                             <div class="modal-header">
                                 <h1 class="modal-title fs-5" id="staticBackdropLabel">Confirm the Reassignment to <b><%= glove.user.firstname %></b></h1>
                                 <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                             </div>
                             <div class="modal-body">
                               <%= form_with(model: glove,local:true) do |form| %>

                               <div class="input-group mb-3">
                                 <%= form.label :slotdate, "Slot Date", class:"input-group-text"%>
                                 <%= form.date_field :slotdate,value: Date.today.strftime('%Y-%m-%d'), class:"form-control", id:"composition",min: Date.today.strftime('%Y-%m-%d') %>
                               </div>

                               <div class="input-group mb-3">
                               <%= form.label :slottime, "Slot Time", class:"input-group-text"%>
                               <%= form.time_field :slottime, class:"form-control", id:"composition"%>
                             </div>

                               <%=form.fields_for :equipment_table do |f| %>

                                   <%= f.hidden_field :app_no, value:"CRF/GLOVE/#{glove.id}"%>
                                   <%= f.hidden_field :username, value:"#{glove.user.firstname}"%>
                                   <%= f.hidden_field :dummy, value:"#{glove.status}"%>
                                   <%= f.hidden_field :debit_head, value:"#{glove.debit}" %>
                               <%end%>
                                 <div class="actions">
                                   <%= form.submit "Allot", class:"btn btn-primary", id:"sbt" %>
                                 </div>
                               <% end %>
                             </div>
                         </div>
                     </div>
                 </div>
                   </td>


                   <td id="cancel-btn">
                      <!-- Button trigger modal -->
                        <%= button_tag "Cancel", type: "button", class: "btn btn-primary", data: { bs_toggle: "modal", bs_target:"#ani#{glove.id}" }, id: "anish" %>

                       <!-- Modal -->
                        <div id="ani<%= glove.id%>" class="modal">
                         <div class="modal-dialog">
                               <div class="modal-content">
                                   <div class="modal-header">
                                       <h1 class="modal-title fs-5" id="staticBackdropLabel">Cancel the slot assigned to <b><%= glove.user.firstname %></b></h1>
                                       <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                   </div>
                                   <div class="modal-body">
                                     <%= form_for glove do |f| %>
                                       <p> Are you sure you want to cancel the slot ?</p>
                                       <%= f.hidden_field :status, value: 'cancelled' %>
                                   <div class="actions">


                                   </div>

                                    </div>
                                   <div class="modal-footer">
                                         <%= f.submit "Cancel", class:"btn btn-primary", id:"sbt" %>
                                   </div>
                                   <% end %>
                               </div>
                           </div>
                       </div>
                   </td>
                   <td id="complete-btn">
                      <!-- Button trigger modal -->
                        <%= button_tag "Complete", type: "button", class: "btn btn-primary", data: { bs_toggle: "modal", bs_target:"#mai#{glove.id}" }, id: "anish" %>

                       <!-- Modal -->
                        <div id="mai<%= glove.id%>" class="modal">
                         <div class="modal-dialog">
                               <div class="modal-content">
                                   <div class="modal-header">
                                       <h1 class="modal-title fs-5" id="staticBackdropLabel">Complete the slot assigned to <b><%= glove.user.firstname %></b></h1>
                                       <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                   </div>
                                   <div class="modal-body">
                                     <%= form_for glove do |f| %>
                                       <p> Are you sure you want to complete the slot ?</p>
                                       <%= f.hidden_field :status, value: 'completed' %>
                                   <div class="actions">


                                   </div>

                                    </div>
                                   <div class="modal-footer">
                                         <%= f.submit "Complete", class:"btn btn-primary", id:"sbt" %>
                                   </div>
                                   <% end %>
                               </div>
                           </div>
                       </div>
                   </td>

<%end%>
              </tr>

          </tbody>
      </table>

  </div>
  </div>


</div>


