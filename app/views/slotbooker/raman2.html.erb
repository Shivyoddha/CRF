                        <%= link_to 'Pending Slots',slotbooker_raman1_path,class:"nav-link active sidelink-wrap" %>
                        </li>
                <li class="nav-item">
                        <%= link_to 'Alloted Slots',slotbooker_raman2_path,class:"nav-link active sidelink-wrap",id:"active-tab" %>
                        </li>
                <li class="nav-item">
                        <%= link_to 'Completed Slots',slotbooker_raman3_path,class:"nav-link active sidelink-wrap" %>
                        </li>
                <li class="nav-item">
                      <%= link_to 'Cancelled Slots',slotbooker_raman4_path,class:"nav-link active sidelink-wrap" %>
                </li>
            </ul>
        </div>
    </div>

<%# the content section is coded here %>
<div id="slots">
  <div id="current-tab">
      <h2 class="fw-bold font-unbounded" id="tab-name">Raman Spectrometer: Alloted Slots</h2>
  </div>


  <div id="slot-details">
  <div>
      <table class="table table-hover font-quicksand">
          <thead>
              <tr class="table-head font-unbounded">
                  <th scope="col">Appl No</th>
                  <th scope="col">Name</th>
                  <th scope="col">Institute</th>
                  <th scope="col">Department</th>
                  <th scope="col">Contact No:</th>
                  <th scope="col">No of Samples</th>
                  <th scope="col">Measurement</th>
                  <th scope="co">Laser To be Used</th>
                  <th scope="col">Sample Type</th>
                  <th scope="col">Sample Description</th>
                  <th scope="col">Toxicity</th>
                  <th scope="col">Compatability</th>
                  <th scope="col">Carcinogenic</th>
                  <th scope="col">More Information</th>
                  <th scope="col" id="booked-on">Booked On</th>
                  <th scope="col" id="slot-date">Slot Date</th>
                  <th scope="col">Slot Time</th>
                  <th scope="col">Status</th>
                  <th scope="col">Reference Paper</th>
                  <th scope="col">Reassign</th>
                  <th scope="col">Cancel</th>
                  <th scope="col" id="cancel-col">Complete</th>

              </tr>
          </thead>
          <tbody>
          <% @raman2.where(status:'alloted').each do |raman|%>
              <tr>
                <!-- Button trigger modal -->
                <th scope="row">CRF/RAMAN/<%=raman.id %>	</th>
                <td> <%= raman.user.firstname%><nobr> <%= raman.user.lastname%></td>
                <td> <%= raman.user.orgname%> </td>
                <td> <%= raman.user.department%> </td>
                <td> <%= raman.user.contact%> </td>
                <td> <%= raman.sample%> </td>
                <td> <%= raman.measurement%> </td>
                <td> <%= raman.laser%> </td>
                <td> <%= raman.stype%> </td>
                <td> <%= raman.description%> </td>
                <td> <%= raman.toxicity%></td>
                <td> <%= raman.Compatability%></td>
                <td> <%= raman.carcinogenic%></td>
                <td> <%= raman.more%> </td>
                <td>Booked</td>
                <td> <%= raman.slotdate %></td>
                <td> <%= raman.slottime %></td>
                <td> <%= raman.status %></td>
                <%if raman.references.attached? %>
              <%raman.references.each do |file|%>
              <td> <%= link_to "Download", rails_blob_path(file, disposition: :attachment), class: "btn btn-primary" %></td>
              <%end%>
                <% else %>
                  <td>NA</td>
                <% end %>
                <td id="assign-btn">
                    <!-- Button trigger modal -->
                     <%= button_tag "Reassign", type: "button", class: "btn btn-primary", data: { bs_toggle: "modal", bs_target:"##{raman.id}" }, id: "ani" %>
                     <div id="<%= raman.id%>" class="modal">

                   <div class="modal-dialog">
                       <div class="modal-content">
                           <div class="modal-header">
                               <h1 class="modal-title fs-5" id="staticBackdropLabel">Confirm the Reassignment to <b><%= raman.user.firstname %></b></h1>
                               <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                           </div>
                           <div class="modal-body">
                             <%= form_with(model: raman,local:true) do |form| %>

                                 <div class="input-group mb-3">
                                 <%= form.label :slotdate, "Slot Date", class:"input-group-text"%>
                                 <%= form.date_field :slotdate, class:"form-control", id:"composition"%>
                               </div>

                               <div class="input-group mb-3">
                               <%= form.label :slottime, "Slot Time", class:"input-group-text"%>
                               <%= form.time_field :slottime, class:"form-control", id:"composition"%>
                             </div>

                             <%=form.fields_for :equipment_table do |f| %>

                                 <%= f.hidden_field :app_no, value:"CRF/RAMAN/#{raman.id}"%>
                                 <%= f.hidden_field :username, value:"#{raman.user.name}"%>
                                 <%= f.hidden_field :dummy, value:"#{raman.status}"%>
                                 <%= f.hidden_field :debit_head, value:"#{raman.debit}" %>

                             <%end%>
                              

                               <div class="actions">
                                 <%= form.submit "Allot", class:"btn btn-primary", id:"sbt" %>

                               </div>
                             <% end %>
                           </div>
                       </div>
                   </div>
               </div>
                 </td>


                 <td id="cancel-btn">
                    <!-- Button trigger modal -->
                      <%= button_tag "Cancel", type: "button", class: "btn btn-primary", data: { bs_toggle: "modal", bs_target:"#ani#{raman.id}" }, id: "anish" %>

                     <!-- Modal -->
                      <div id="ani<%= raman.id%>" class="modal">
                       <div class="modal-dialog">
                             <div class="modal-content">
                                 <div class="modal-header">
                                     <h1 class="modal-title fs-5" id="staticBackdropLabel">Cancel the slot assigned to <b><%= raman.user.firstname %></b></h1>
                                     <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                 </div>
                                 <div class="modal-body">
                                   <%= form_for raman do |f| %>
                                     <p> Are you sure you want to cancel the slot ?</p>
                                     <%= f.hidden_field :status, value: 'cancelled' %>
                                 <div class="actions">


                                 </div>

                                  </div>
                                 <div class="modal-footer">
                                       <%= f.submit "Cancel", class:"btn btn-primary", id:"sbt" %>
                                 </div>
                                 <% end %>
                             </div>
                         </div>
                     </div>
                 </td>
                 <td id="complete-btn">
                    <!-- Button trigger modal -->
                      <%= button_tag "Complete", type: "button", class: "btn btn-primary", data: { bs_toggle: "modal", bs_target:"#mai#{raman.id}" }, id: "anish" %>

                     <!-- Modal -->
                      <div id="mai<%= raman.id%>" class="modal">
                       <div class="modal-dialog">
                             <div class="modal-content">
                                 <div class="modal-header">
                                     <h1 class="modal-title fs-5" id="staticBackdropLabel">Complete the slot assigned to <b><%= raman.user.firstname %></b></h1>
                                     <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                 </div>
                                 <div class="modal-body">
                                   <%= form_for raman do |f| %>
                                     <p> Are you sure you want to complete the slot ?</p>
                                     <%= f.hidden_field :status, value: 'completed' %>
                                 <div class="actions">


                                 </div>

                                  </div>
                                 <div class="modal-footer">
                                       <%= f.submit "Complete", class:"btn btn-primary", id:"sbt" %>
                                 </div>
                                 <% end %>
                             </div>
                         </div>
                     </div>
                 </td>

            <%end%>
            </tr>

            </tbody>
            </table>

            </div>
            </div>


            </div>


            </div>
            <script>
            // Get the modals and buttons
            var modal1 = document.getElementByClass("modal");
            var btn1 = document.getElementById("ani");
            var modal2 = document.getElementByClass("modal2");
            var btn2 = document.getElementById("anish");
            // Add event listeners to the buttons
            btn1.addEventListener("click", function() {
            modal1.style.display = "block";
            });

            btn2.addEventListener("click", function() {
            modal2.style.display = "block";
            });

            // Close the modal when the user clicks anywhere outside of it
            window.addEventListener("click", function(event) {
            if (event.target == modal1) {
            modal1.style.display = "none";
            }
            if (event.target == modal2) {
            modal2.style.display = "none";
            }
            });
            </script>
