<%# the content section is coded here %>
    <div id="slots">
        <div id="current-tab">
            <h2 class="fw-bold font-unbounded" id="tab-name">low:Completed Slots</h2>
        </div>


        <div id="slot-details">
        <div>
            <table class="table table-hover font-quicksand">
                <thead>
                    <tr class="table-head font-unbounded">
                      <th scope="col" id="application-no">Appl No</th>
                      <th scope="col" id="name">Name</th>
                      <th scope="col" id="institute">Institute</th>
                      <th scope="col" id="department">Department</th>
                      <th scope="col" id="contact-no">Contact No:</th>
                      <th scope="col" id="sample-no">sample</th>
                      <th scope="col" id="sample-no">sample code</th>
                      <th scope="col" id="composition">sample type</th>
                      <th scope="col" id="composition">table type</th>
                      <th scope="col" id="composition">table f</th>
                      <th scope="col" id="composition">mention</th>
                      <th scope="col" id="request">More info</th>
                      <th scope="col" id="booked-on">Booked On</th>
                      <th scope="col" id="slot-date">Slot Date</th>
                      <th scope="col" id="slot-time">Slot Time</th>
                      <th scope="col">Status</th>
                      <th scope="col" id="reference-paper">Reference Paper</th>
                    </tr>
                </thead>
                <tbody>

                      <% @low3.where(status:'completed').each do |lows|%>
                      <tr>
                        <th scope="row">CRF/low3/<%=low3.id %>	</th>
                        <td> <%= low3.user.name%> </td>
                        <td> <%= low3.user.orgname%> </td>
                        <td> <%= low3.user.department%> </td>
                        <td> <%= low3.user.contact%> </td>

                        <td> <%= low3.sample%> </td>
                        <td> <%= low3.sc1%>
                             <%= low3.sc2%> <br>
                             <%= low3.sc3%> <br>
                             <%= low3.sc4%><br>
                             <%= low3.sc5%></td>
                        <td> <%= low3.st1%>
                             <%= low3.st2%>
                             <%= low3.st3%>
                             <%= low3.st4%>
                             <%= low3.st5%></td>
                         <td> <%= low3.tt1%>
                              <%= low3.tt2%>
                              <%= low3.tt3%>
                              <%= low3.tt4%>
                              <%= low3.tt5%></td>
                        <td> <%= low3.m1%>
                             <%= low3.m2%>
                             <%= low3.m3%>
                             <%= low3.m4%>
                             <%= low3.m5%></td>
                        <td> <%= low3.tf1%>
                             <%= low3.tf2%>
                             <%= low3.tf3%>
                             <%= low3.tf4%>
                             <%= low3.tf5%></td>
                        <td> <%= low3.more%> </td>
                        <td>Booked</td>

                        <td> <%= low3.slotdate %></td>

                        <td> <%= low3.slottime %></td>

                          <td><%= low3.status%></td>
                          <%if low3.references.attached? %>
                          <%low3.references.each do |file|%>
                          <td> <%= link_to "Download", rails_blob_path(file, disposition: :attachment), class: "btn btn-primary" %></td>
                             <% end %>
                        <% else %>
                          <td>NA</td>
                        <% end %>
                    </tr>
                      <%end%>
                </tbody>
            </table>

        </div>
        </div>


    </div>


</div>
