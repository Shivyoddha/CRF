<div class="container-slot-booker">

    <div id="navigation" class="font-quiucksand">
        <!--below is the button of Nitk CRF logo-->
        <div id="navigation-logo">
          <a href="/"> <%=image_tag 'logoT', id:"logopic", class:"btn btn-left" %> </a>
        </div>

        <div class="sidelinks">

            <h2 class="fw-bold text-center">Navigation</h2>
            <ul class="sidelinks-model-list">
                <%# below are code to get items on the navigation pane %>
                <li class="nav-item">
                        <%= link_to 'All Slots',slotbooker_elctro_path,class:"nav-link active sidelink-wrap" %>
                </li>
                <li class="nav-item">
                        <%= link_to 'Pending Slots',slotbooker_elctro1_path,class:"nav-link active sidelink-wrap",id:"active-tab" %>
                        </li>
                <li class="nav-item">
                        <%= link_to 'Alloted Slots',slotbooker_elctro2_path,class:"nav-link active sidelink-wrap" %>
                        </li>
                <li class="nav-item">
                        <%= link_to 'Completed Slots',slotbooker_elctro3_path,class:"nav-link active sidelink-wrap" %>
                        </li>
                <li class="nav-item">
                      <%= link_to 'Cancelled Slots',slotbooker_elctro4_path,class:"nav-link active sidelink-wrap" %>
                </li>
            </ul>
        </div>
    </div>

<%# the content section is coded here %>
    <div id="slots">
        <div id="current-tab">
            <h2 class="fw-bold font-unbounded" id="tab-name">Electro Chemical Polishing:Pending Slots</h2>
        </div>


        <div id="slot-details">
        <div>
            <table class="table table-hover font-quicksand">
                <thead>
                    <tr class="table-head font-unbounded">
                        <th scope="col" id="application-no">Appl No</th>
                        <th scope="col" id="name">Name</th>
                        <th scope="col" id="institute">Institute</th>
                        <th scope="col" id="department">Department</th>
                        <th scope="col" id="contact-no">Contact No:</th>
                        <th scope="col" id="sample-no">No of Samples</th>
                        <th scope="col" id="composition">Composition</th>
                        <th scope="col" id="composition">elctrolyte</th>
                        <th scope="col" id="phase">Application</th>
                        <th scope="col" id="request">More</th>
                        <th scope="col" id="booked-on">Booked On</th>
                        <th scope="col" id="slot-date">Slot Date</th>
                        <th scope="col" id="slot-time">Slot Time</th>
                        <th scope="col">Status</th>
                        <th scope="col" id="reference-paper">Reference Paper</th>
                        <th scope="col" id="reference-paper">Assign</th>
                    </tr>
                </thead>
                <tbody>

                        <% @elctro1.where(status:'pending').each do |elctro|%>
                      <tr>
                        <!-- Button trigger modal -->
                        <th scope="row">CRF/elctro/<%=elctro.id %>	</th>
                        <td> <%= elctro.user.firstname%><nobr> <%= elctro.user.lastname%></td>
                        <td> <%= elctro.user.orgname%> </td>
                        <td> <%= elctro.user.department%> </td>
                        <td> <%= elctro.user.contact%> </td>
                        <td> <%= elctro.sample%> </td>
                        <td> <%= elctro.composition%> </td>
                        <td> <%= elctro.electrolyte%> </td>
                        <td> <%= elctro.application%> </td>
                        <td> <%= elctro.more%> </td>
                        <td>Booked</td>
                        <td><span style="white-space: nowrap;"><%= elctro.slotdate.strftime('%d-%m-%Y')if elctro.slotdate.present? %></td>
                        <td><%= elctro.slottime.strftime('%H:%M:%S') if elctro.slottime.present? %></td>
                          <td><%= elctro.status%></td>
                          <%if elctro.references.attached? %>
                      <%elctro.references.each do |file|%>
                      <td> <%= link_to "Download", rails_blob_path(file, disposition: :attachment), class: "btn btn-primary" %></td>
                         <% end %>
                    <% else %>
                      <td>NA</td>
                    <% end %>
                    <td id="assign-btn">
                        <!-- Button trigger modal -->
                         <%= button_tag "Assign", type: "button", class: "btn btn-primary", data: { bs_toggle: "modal", bs_target:"##{elctro.id}" }, id: "ani" %>
                         <div id="<%= elctro.id%>" class="modal">

                         <div class="modal-dialog">
                               <div class="modal-content">
                                   <div class="modal-header">
                                       <h1 class="modal-title fs-5" id="staticBackdropLabel">Confirm the Reassignment to <b><%= elctro.user.firstname %></b></h1>
                                       <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                     <div class="modal-body">
                                       <%= form_with(model: elctro,local:true) do |form| %>

                                       <div class="input-group mb-3">
                                         <%= form.label :slotdate, "Slot Date", class:"input-group-text"%>
                                         <%= form.date_field :slotdate,value: Date.today.strftime('%Y-%m-%d'), class:"form-control", id:"composition",min: Date.today.strftime('%Y-%m-%d') %>
                                       </div>

                                       <div class="input-group mb-3">
                                       <%= form.label :slottime, "Slot Time", class:"input-group-text"%>
                                       <%= form.time_field :slottime, class:"form-control", id:"composition"%>
                                     </div>

                                        <%=form.fields_for :equipment_table do |f| %>
                                            <%= f.hidden_field :app_no, value:"CRF/ELECTRO/#{elctro.id}"%>
                                           <%= f.hidden_field :username, value:"#{elctro.user.name}"%>
                                           <%= f.hidden_field :dummy, value:"alloted"%>
                                          <%= f.hidden_field :debit_head, value:"#{elctro.debit}" %>
                                        <%= f.hidden_field :dept, value:"#{electro.user.department}" %>
                                       <%= f.hidden_field :email, value:"#{electro.user.email}" %>
                                       <%= f.hidden_field :equipname, value:"electro" %>
                                       <%= f.hidden_field :role, value:"#{electro.user.role}" %>
                                      <%= f.hidden_field :org, value:"#{electro.user.orgaddress}" %>
                                      <%= f.hidden_field :profesion, value:"#{electro.user.profession}" %>
                                      <%= f.hidden_field :orgname, value:"#{electro.user.orgname}" %>

                                        <%end%>

                                         <div class="actions">
                                           <%= form.submit "Allot", class:"btn btn-primary", id:"sbt" %>
                                         </div>
                                       <% end %>



                                     </div>
                                 </div>
                             </div>

                       </div>

                                             </td>

                                         </tr>
                       <%end%>

                                     </tbody>
                                 </table>

                             </div>
                             </div>


                         </div>


                       </div>
                       <script>
                       // Get the modals and buttons
                       var modal1 = document.getElementByClass("modal");
                       var btn1 = document.getElementById("ani");

                       // Add event listeners to the buttons
                       btn1.addEventListener("click", function() {
                         modal1.style.display = "block";
                       });

                       btn2.addEventListener("click", function() {
                         modal2.style.display = "block";
                       });

                       // Close the modal when the user clicks anywhere outside of it
                       window.addEventListener("click", function(event) {
                         if (event.target == modal1) {
                           modal1.style.display = "none";
                         }
                         if (event.target == modal2) {
                           modal2.style.display = "none";
                         }
                       });
                       </script>
