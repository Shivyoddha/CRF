    <div class="container">


        <div id="slots">
            <div id="current-tab">
                <h2 class="fw-bold" id="tab-name">Release express slots for the equipments</h2>
            </div>


            <div id="slot-details">

                <table class="table table-hover">
                    <thead class="font-unbounded">
                        <tr class="bg-light">
                            <th scope="col" id="application-no">Equipment ID</th>
                            <th scope="col" id="name">Equipment Name</th>
                            <th scope="col" id="name">Duration</th>
                            <th scope="col" id="institute">Slot Releaser</th>
                        </tr>
                    </thead>
                    <tbody class="font-quicksand fs-15">
                        <% @equiplist.each do |equip|%>
                            <tr>

                                <th scope="row">
                                    <%=equip.id%>
                                </th>

                                <td>
                                    <%= equip.name%>
                                </td>

                                <td>
                                    <%= equip.expressstart %> <b>to</b> <%= equip.expressend%>
                                </td>

                                <td id="assign-btn">


                                    <button type="button" class="btn btn-primary">
                                    <%= link_to "Release Slots" , mainportal_adminExpSlot_path(equipment_id: equip.id), class: "btn btn-primary" %> <span class="badge text-bg-secondary"><%= equip.expressslot %></span>
                                    </button>

                                </td>


                            </tr>



                            <%end%>
                    </tbody>
                </table>

            </div>


        </div>


    </div>
