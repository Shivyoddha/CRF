                <script>
                    function myFunction() {
                        var array=[]
                        for(let i=1; i<2; i++){
                            "<%@equipment=EquipmentTable.all.each do |equip|%> "
                            array.push("<%=equip.name%>")
                            "<%end%>"
                        }
                    return array;
                    }
                    var xValues = myFunction();
                    var yValues = [55, 49, 44, 70, 65];
                    var barColors = [
                    "#b91d47",
                    "#00aba9",
                    "#2b5797",
                    "#e8c3b9",
                    "#1e7145"
                    ];

                    new Chart("myChart", {
                    type: "pie",
                    data: {
                        labels: xValues,
                        datasets: [{
                        backgroundColor: barColors,
                        data: yValues
                        }]
                    },
                        options: {

                            title: {
                            display: true,
                            text: "World Wide Wine Production 2018",
                            plugins: {
                                legend: {
                                    labels: {
                                        // This more specific font property overrides the global property
                                        font: {
                                            size: 16
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    });
